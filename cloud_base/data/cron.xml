<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="cloud_base_prepare_folders" model="ir.cron">
            <field name="name">[Cloud Storage] Prepare Cloud Folders</field>
            <field name="model_id" ref="cloud_base.model_sync_model"/>
            <field name="state">code</field>
            <field name="code">model.action_prepare_auto_folders()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(seconds=300)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
        <record id="cloud_base_run_prepare_queue" model="ir.cron">
            <field name="name">[Cloud Storage] Run/Prepare sync queue</field>
            <field name="model_id" ref="cloud_base.model_clouds_queue"/>
            <field name="state">code</field>
            <field name="code">model.action_prepare_and_run_queue()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(seconds=600)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
        <record id="cloud_base_make_auto_backups" model="ir.cron">
            <field name="name">[Cloud Storage] Create Database Automatic Backups</field>
            <field name="model_id" ref="cloud_base.model_clouds_backup_strategy"/>
            <field name="state">code</field>
            <field name="code">model.action_make_backups()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(seconds=450)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
        <record id="cloud_base_deactivate_shares" model="ir.cron">
            <field name="name">[Cloud Storage] Check Expired Shares</field>
            <field name="model_id" ref="cloud_base.model_clouds_share"/>
            <field name="state">code</field>
            <field name="code">model.action_check_expired_shares()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 09:30:00')"/>
        </record>

    </data>
</odoo>
