<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_employee_form_custom_private_info" model="ir.ui.view">
        <field name="name">hr.employee.form.private.info.custom</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='public']" position="attributes">
                <attribute name="string">Business Info</attribute>
            </xpath>
            <xpath expr="//page[@name='public']//field[@name='resource_calendar_id']" position="attributes">
                <attribute name="string">Hours Per week</attribute>
            </xpath>
            <xpath expr="//page[@name='public']" position="inside">
                <group string="Additional Work Info">
                    <field name="performance" widget="percent"/>
                    <field name="productive_hours"/>
                    <field name="date_of_working"/>
                    <field name="last_working_date"/>
                    <field name="hourly_cost" string="Salary Cost Per Worker"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='work_email']" position="before">
                <field name="short_name"/>
            </xpath>
        </field>
    </record>
    <record id="view_employee_form_inherit_hide_hourly_cost" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.hide.hourly.cost</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_hourly_cost.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='application_group']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
