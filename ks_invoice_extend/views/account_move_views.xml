<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_product_form_inherit_pdf_flag" model="ir.ui.view">
        <field name="name">product.product.form.to_be_printed_on_pdf</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_ok']" position="before">
                <span class="d-inline-flex">
                    <field name="to_be_printed_on_pdf"/>
                    <label for="to_be_printed_on_pdf"/>
                </span>
            </xpath>
        </field>
    </record>
    <record id="view_move_form_inherit_project" model="ir.ui.view">
        <field name="name">account.move.form.inherit.project</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="before">
                <field name="project_id"/>
                <field name="project_number"/>
            </xpath>
            <xpath expr="//field[@name='invoice_date']" position="after">
                <div class="o_row" name="invoice_period_section" style="display: flex; gap: 16px; align-items: center;">
                    <div class="o_form_label " style="width: 150px;font-weight: 550;">Invoice Period</div>
                    <div style="flex: 1;">
                        <field name="period_start"/>
                    </div>
                    <div style="flex: 1;">
                        <field name="period_end"/>
                    </div>
                </div>
                <field name="invoice_stage"/>
            </xpath>
             <xpath expr="//group[@name='accounting_info_group']" position="after">
                 <group string="Customer Payment QR">
                     <field name="qr_code" widget="image" class="oe_avatar"/>
                 </group>
             </xpath>
        </field>
    </record>
</odoo>