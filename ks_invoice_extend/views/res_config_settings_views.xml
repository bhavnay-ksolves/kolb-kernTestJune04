<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_res_config_settings_qr_code" model="ir.ui.view">
    <field name="name">res.config.settings.qr.code.form</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//block[@id='pay_invoice_online_setting_container']" position="after">
            <div class="app_settings_block" data-string="Payment QR" string="Payment QR" name="payment_qr">
                <h2>Payment QR Code</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <field name="qrcode" widget="image"/>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </field>
</record>

</odoo>