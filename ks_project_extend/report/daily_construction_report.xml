<odoo>
    <template id="report_daily_construction">
        <t t-call="web.html_container">
            <meta charset="utf-8" />
            <style>
                .page-break-after {
                page-break-after: always;
                }
            </style>
            <div class="page">
            <t t-foreach="docs" t-as="doc">
                <div style="font-family: sans-serif;">
                    <table style="width: 100%;">
                        <tr>
                            <td style="padding: 24px 0; text-align: center;">
                                <span style="font-size: 36px; font-weight: 700; color: red; display: inline-block;">
                                    Täglicher Baubericht
                                </span>
                            </td>
                        </tr>
                    </table>
                    <!-- General Info -->
                    <table cellspacing="0" cellpadding="0" border="0" width="100%"
                        style="width: 100%;" class="page-break-after" >
                        <tbody>
                            <tr>
                                <td style="background-color: #f0f5f9; border-radius: 4px; padding: 4px; font-size: 18px;
                                 font-weight: 600;">
                                    <table cellspacing="0" cellpadding="0" border="0" width="100%"
                                        style="
                                        width: 100%;
                                        ">
                                        <tr>
                                            <td style="background-color: #f0f5f9; border-radius: 4px;
                                                text-align: center; padding: 8px;font-size: 22px; font-weight: 600;">
                                                <span style="color: red;">Allgemein</span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding-top: 12px; padding-bottom: 24px;">
                                    <table cellspacing="0" cellpadding="0" border="0" width="100%" style="
                                        width: 100%; border-spacing: 16px; border: 2px solid #f0f5f9; padding: 16px;
                                        border-radius: 4px;
                                        ">
                                        <tr>
                                            <td colspan="2" style="font-size: 19px; font-weight: 600;
                                            padding-bottom: 12px;">
                                                <span style="color: red; padding-left: 4px;">
                                                    Standortinformationen
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border: 1px solid #dde9f3;
                                            border-radius: 8px; color: #93a0b9; font-size: 16px; padding: 12px; width: 50%;">
                                                <span style="color: #000;"><t t-esc="doc.project_id.name" /></span>
                                            </td>
                                            <td style="border: 1px solid #dde9f3; border-radius: 8px; color: #93a0b9;
                                            font-size: 16px; padding: 12px; width: 50%;">
                                                <span style="color: #000;"><t t-esc="doc.site_location"
                                                                              t-options='{"widget": "text"}' /></span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td
                                                style="border: 1px solid #dde9f3; border-radius: 8px; color: #93a0b9;
                                                font-size: 16px; padding: 12px; width: 50%;">
                                                <span style="padding-right: 16px; color: #000;"><t t-esc="doc.date" /></span>
                                            </td>
                                            <td
                                                style="border: 1px solid #dde9f3; border-radius: 8px; color: #93a0b9;
                                                font-size: 16px; padding: 12px; width: 50%;">
                                                <span style="padding-left: 4px;color: #000;">
                                                    <t t-esc="doc.weather"/>
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td
                                                style="border: 1px solid #dde9f3; border-radius: 8px; color: #93a0b9;
                                                font-size: 16px; padding: 12px; width: 50%;">
                                                <span style="padding-left: 4px;color: #000;">
                                                    <t t-esc="doc.temperature"/>
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2" style="font-size: 19px; font-weight: 600;
                                            padding-bottom: 12px; padding-top: 16px;">
<!--                                                <img t-attf-src="ks_project_extend/static/src/img/list-icon.png"-->
<!--                                                     width="26" height="26" alt="list icon" style="vertical-align: top;" />-->
                                                <span style="color: red; padding-left: 4px;">
                                                    Anwesenheit
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">
                                                <div style="border: 1px solid #dde9f3; border-radius: 8px;
                                                color: #000; font-size: 16px; padding: 12px; width: 100%;
                                                box-sizing: border-box;">
                                                    <t t-esc="doc.attendance"/>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Execution Section -->
                    <table cellspacing="0" cellpadding="0" border="0" width="100%" style="
                        width: 100%;" class="page-break-after">
                        <tbody>
                            <tr>
                                <td style="background-color: #f0f5f9; border-radius: 4px; padding: 4px; font-size: 18px;
                                 font-weight: 600;">
                                    <table cellspacing="0" cellpadding="0" border="0" width="100%"
                                        style="
                                        width: 100%;
                                        ">
                                        <tr>
                                            <td style="background-color: #f0f5f9; border-radius: 4px;
                                                text-align: center; padding: 8px;font-size: 22px; font-weight: 600;">
                                                <span style="color: red;">Ausführung</span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding-top: 12px; padding-bottom: 24px;">
                                    <table cellspacing="0" cellpadding="0" border="0" width="100%" style="
                                                            width: 100%; border-spacing: 16px; border: 2px solid #f0f5f9;
                                                             padding: 16px; border-radius: 4px;
                                                            ">
                                        <tr>
                                            <td colspan="2" style="font-size: 19px; font-weight: 600;
                                            padding-bottom: 12px;">
                                                <span style="color: red; padding-left: 4px;">
                                                    Ausgeführte Arbeiten
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2" style="border: 1px solid #dde9f3; border-radius: 8px; color: #93a0b9;
                                                font-size: 16px; padding: 12px; width: 50%;">
                                                <span style="color: #000;"><t t-esc="doc.description"
                                                                              t-options='{"widget": "text"}'/></span>
                                            </td>
                                        </tr>
                                        <tr t-if="doc.machine">
                                            <td colspan="2"
                                                style="border: 1px solid #dde9f3; border-radius: 8px; color: #93a0b9;
                                                font-size: 16px; padding: 12px; width: 50%;">
                                                <span style="color: #000;"><t t-esc="doc.machine"
                                                t-options='{"widget": "text"}' /></span>
                                            </td>
                                        </tr>
                                        <tr t-if="doc.areas_worked_on">
                                            <td colspan="2"
                                                style="border: 1px solid #dde9f3; border-radius: 8px; color: #93a0b9;
                                                font-size: 16px; padding: 12px; width: 50%;">
                                                <span style="color: #000;"><t t-esc="doc.areas_worked_on"
                                                                              t-options='{"widget": "text"}'/></span>
                                            </td>
                                        </tr>
                                        <tr t-if="doc.delivery">
                                            <td colspan="2"
                                                style="border: 1px solid #dde9f3; border-radius: 8px; color: #93a0b9;
                                                font-size: 16px; padding: 12px; width: 50%;">
                                                <span style="color: #000;"><t t-esc="doc.delivery"
                                                                              t-options='{"widget": "text"}'/> </span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Special Incidents Section -->
                    <table cellspacing="0" cellpadding="0" border="0" width="100%" style="
                                            width: 100%;" class="page-break-after">
                        <tbody>
                            <tr>
                                <td style="background-color: #f0f5f9; border-radius: 4px; padding: 4px; font-size: 18px;
                                 font-weight: 600;">
                                    <table cellspacing="0" cellpadding="0" border="0" width="100%" style="
                                                            width: 100%;
                                                            ">
                                        <tr>
                                            <td style="text-align: center; padding: 8px;font-size: 22px; font-weight: 600;">
                                                <span style="color: red;">Besondere Vorfälle</span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding-top: 12px; padding-bottom: 24px;">
                                    <table cellspacing="0" cellpadding="0" border="0" width="100%" style="
                                                            width: 100%; border-spacing: 16px; border: 2px solid #f0f5f9;
                                                             padding: 16px; border-radius: 4px;
                                                            ">
                                        <tr>
                                            <td colspan="2" style="font-size: 19px; font-weight: 600;
                                             padding-bottom: 12px;">
                                                <span style="color: red; padding-left: 4px;">Beobachtungen</span>
                                            </td>
                                        </tr>
                                        <tr t-if="doc.changes_in_benefits">
                                            <td colspan="2">
                                                <div
                                                    style="border: 1px solid #dde9f3; border-radius: 8px; color: #000;
                                                    font-size: 16px; padding: 12px; width: 100%; box-sizing:
                                                     border-box;"><t t-esc="doc.changes_in_benefits"
                                                                     t-options='{"widget": "text"}'/></div>
                                            </td>
                                        </tr>
                                        <tr t-if="doc.disabilities_difficulties">
                                            <td colspan="2">
                                                <div
                                                    style="border: 1px solid #dde9f3; border-radius: 8px; color: #000;
                                                    font-size: 16px; padding: 12px; width: 100%; box-sizing:
                                                     border-box;"><t t-esc="doc.disabilities_difficulties"
                                                t-options='{"widget": "text"}'/></div>
                                            </td>
                                        </tr>
                                        <tr t-if="doc.special_incidents">
                                            <td colspan="2">
                                                <div
                                                    style="border: 1px solid #dde9f3; border-radius: 8px; color: #000;
                                                    font-size: 16px; padding: 12px; width: 100%; box-sizing:
                                                     border-box;"><t t-esc="doc.special_incidents"
                                                t-options='{"widget": "text"}'/></div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2" style="padding-top: 12px;">
                                                <div style="border: 1px dashed #dde9f3; border-radius: 8px;
                                                font-size: 18px; padding: 24px; width: 100%; box-sizing: border-box;">
                                                    <div style="padding-top: 4px;">
                                                        <span style="padding-left: 4px;
                                                        color: red;">
                                                            <t t-if="doc.incidents_image">
                                                                <t t-foreach="doc.incidents_image" t-as="img">
                                                                    <img t-if="img.datas"
                                                                         t-att-src="image_data_uri(img.datas)"/>
                                                                </t>
                                                            </t>
                                                        </span>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    
                    <!-- Release Grant Section -->
                    <table cellspacing="0" cellpadding="0" border="0" width="100%" style="
                                            width: 100%;">
                        <tbody>
                            <tr>
                                <td style="background-color: #f0f5f9; border-radius: 4px; padding: 4px; font-size: 18px;
                                font-weight: 600;">
                                    <table cellspacing="0" cellpadding="0" border="0" width="100%" style="
                                                                                width: 100%;
                                                                                ">
                                        <tr>
                                            <td style="text-align: center; padding: 8px;font-size: 22px; font-weight: 600;">
                                                <span style="color: red;">Freigabe</span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding-top: 12px; padding-bottom: 24px;">
                                    <table cellspacing="0" cellpadding="0" border="0" width="100%"
                                           style="width: 100%; border-spacing: 16px;border: 2px solid #f0f5f9;
                                           padding: 16px; border-radius: 4px;">
                                        <tr>
                                            <td colspan="2" style="font-size: 19px; font-weight: 600;     padding-bottom: 12px;">
                                                <span style="color: red; padding-left: 4px;">
                                                    Freigabe
                                                </span>
                                            </td>
                                        </tr>
                                        <tr t-if="doc.responsible">
                                            <td colspan="2"
                                                style="border: 1px solid #dde9f3; border-radius: 8px; padding: 12px;
                                                width: 50%;">
                                                <table style="width: 100%; border-collapse: collapse;">
                                                    <tr>
                                                        <t t-foreach="doc.responsible" t-as="person">
                                                            <td style="border: 1px solid #93a0b9; border-radius: 6px;
                                                            padding: 6px 10px; background-color: #f0f4fa; margin: 4px;">
                                                                <t t-esc="person.name"/>
                                                            </td>
                                                        </t>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr t-if="doc.supervisor_signature">
                                            <td colspan="2"
                                                style="border: 1px solid #dde9f3; border-radius: 8px; color: #93a0b9;
                                                font-size: 16px; padding: 12px; width: 50%;">
                                                <span> <img t-if="doc.supervisor_signature"
                                                            t-att-src="image_data_uri(doc.supervisor_signature)"/></span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
            </div>
        </t>
    </template>
<!--    Paper formating-->
    <record id="paperformat_daily_construction" model="report.paperformat">
        <field name="name">Daily Construction</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="dpi">90</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
    </record>

    <record id="action_daily_construction_pdf" model="ir.actions.report">
        <field name="name">Daily Construction Report</field>
        <field name="model">daily.construction.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ks_project_extend.report_daily_construction</field>
        <field name="report_file">ks_project_extend.report_daily_construction</field>
        <field name="print_report_name">'%s - Daily Construction Report' % (object.project_id.name or 'No Project')</field>
        <field name="paperformat_id" ref="ks_project_extend.paperformat_daily_construction"/>
    </record>
</odoo>
