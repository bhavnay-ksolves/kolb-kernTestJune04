<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_project_form_inherit_custom" model="ir.ui.view">
        <field name="name">project.project.form.inherit.custom</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="replace">
                <field name="user_id" string="Site Manager"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="responsible" widget="many2many_tags" domain="[('id', '!=', user_id)]"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="customer_address"/>
                <field name="art_type"/>
                <field name="site_location"/>
                <field name="attendance"/>
                <field name="date"/>
                <field name="weather"/>
            </xpath>
            <xpath expr="//field[@name='date_start']" position="after">
                <field name="work_order_description"/>
                <field name="type_of_work_id"/>
            </xpath>
             <xpath expr="//notebook" position="inside">
                 <page string="Execution">
                     <group>
                         <field name="description"/>
                         <field name="machine"/>
                         <field name="delivery"/>
                     </group>
                 </page>
                 <page string="Incidents">
                    <group>
                        <field name="incidents"/>
                        <field name="incident_attachment"/>
                    </group>
                 </page>
                <page string="Sign Off">
                    <group>
                        <field name="responsible" widget="many2many_tags" readonly="1"/>
                        <field name="supervisor_signature" widget="image" filename="supervisor_signature"/>
                        <field name="client_signature" widget="image" filename="client_signature"/>
                        <field name="signoff_attachment" filename="signoff_attachment_name"/>
                    </group>
                </page>
             </xpath>
            <xpath expr="//header" position="inside">
                <button name="daily_construction_report"
                        type="object"
                        string="Daily Construction Report"
                        class="btn-primary"
                        icon="fa-print"/>
            </xpath>
        </field>
    </record>
</odoo>
