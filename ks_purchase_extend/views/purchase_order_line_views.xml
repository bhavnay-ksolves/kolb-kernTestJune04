<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form_line_inherit_custom" model="ir.ui.view">
        <field name="name">purchase.order.line.inherit.custom</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="after">
                <field name="product_description" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="after">
                <field name="manufacturer_special_price" optional="hide"/>
                <field name="lvp" optional="hide"/>
                <field name="lot_barcode"  optional="hide"/>
                <field name="container" optional="hide"/>
                <field name="default_code" optional="hide"/>
            </xpath>
        </field>
    </record>
    <!-- list View -->
    <record id="view_product_container_list" model="ir.ui.view">
        <field name="name">product.container.list</field>
        <field name="model">product.container</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_product_container_form" model="ir.ui.view">
        <field name="name">product.container.form</field>
        <field name="model">product.container</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
<!--    Action for product container-->
     <record id="action_product_container" model="ir.actions.act_window">
        <field name="name">Containers</field>
        <field name="res_model">product.container</field>
        <field name="view_mode">list,form</field>
    </record>
<!--    Menu for product.container-->
     <menuitem id="menu_product_container"
              name="Containers"
              parent="purchase.menu_purchase_config"
              action="action_product_container"/>
</odoo>

