<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- list View -->
    <record id="view_risk_assessment_template_list" model="ir.ui.view">
        <field name="name">risk.assessment.template.list</field>
        <field name="model">risk.assessment.template</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="threat_measures"/>
                <field name="implementation"/>
                <field name="review"/>
            </list>
        </field>
    </record>

     <!-- Search View -->
    <record id="view_risk_assessment_template_search" model="ir.ui.view">
        <field name="name">risk.assessment.template.search</field>
        <field name="model">risk.assessment.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Risk Type"/>
                <field name="threat_measures"/>
                <field name="review"/>
                <field name="implementation"/>
                <group expand="1" string="Group By">
                    <filter string="Project" name="group_by_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Danger" name="group_by_name" context="{'group_by': 'name'}"/>
                    <filter string="Threat Measures" name="group_by_threat_measures" context="{'group_by': 'threat_measures'}"/>
                    <filter string="Implementation" name="group_by_implementation" context="{'group_by': 'implementation'}"/>
                    <filter string="Review" name="group_by_review" context="{'group_by': 'review'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_risk_assessment_template" model="ir.actions.act_window">
        <field name="name">Risk Assessment Templates</field>
        <field name="res_model">risk.assessment.template</field>
        <field name="view_mode">list</field>
        <field name="search_view_id" ref="view_risk_assessment_template_search"/>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_risk_assessment_template"
              name="Risk Assessment Templates"
              parent="project.menu_project_config"
              action="action_risk_assessment_template"
              />
</odoo>
