<odoo>
    <!--  Invoice Form  -->
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_print_measurement_calculation" class="oe_highlight"
                        type="object"/>
            </xpath>
            <xpath expr="//field[@name='delivery_date']" position="after">
                <field name='measurement_id' options="{'no_create': True, 'no_create_edit': True}"
                       invisible="move_type != 'out_invoice'"/>
            </xpath>
        </field>
    </record>
</odoo>