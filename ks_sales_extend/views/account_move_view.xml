<odoo>
    <!-- Invoice Form View -->
    <record id="view_move_form" model="ir.ui.view">
        <!-- Name of the view -->
        <field name="name">account.move.form</field>
        <!-- Model associated with the view -->
        <field name="model">account.move</field>
        <!-- Reference to the parent view to inherit -->
        <field name="inherit_id" ref="account.view_move_form"/>
        <!-- XML architecture of the view -->
        <field name="arch" type="xml">
            <!-- Add a button inside the header section -->
            <xpath expr="//header" position="inside">
                <button name="action_print_measurement_calculation" class="oe_highlight"
                        type="object"/>
            </xpath>
            <!-- Add a field for measurement_id after the delivery_date field -->
            <xpath expr="//field[@name='delivery_date']" position="after">
                <field name='measurement_id' options="{'no_create': True, 'no_create_edit': True}"
                       invisible="move_type != 'out_invoice'"/>
            </xpath>
        </field>
    </record>
</odoo>