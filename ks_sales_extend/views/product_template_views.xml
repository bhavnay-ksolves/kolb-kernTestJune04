<odoo>
    <!-- Product Form View Inherit -->
    <record id="view_product_form_inherit_pdf_flag" model="ir.ui.view">
        <!-- Name of the view -->
        <field name="name">product.template.pdf.flag</field>
        <!-- Model associated with the view -->
        <field name="model">product.template</field>
        <!-- Reference to the parent view to inherit -->
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <!-- XML architecture of the view -->
        <field name="arch" type="xml">
            <!-- Add a field for 'to_be_printed_on_pdf' before the 'sale_ok' field -->
            <xpath expr="//field[@name='sale_ok']" position="before">
                <!-- Display the 'to_be_printed_on_pdf' field with a label, visible only to system administrators -->
                <span class="d-inline-flex" groups="base.group_system">
                    <field name="to_be_printed_on_pdf"/>
                    <label for="to_be_printed_on_pdf"/>
                </span>
            </xpath>
        </field>
    </record>
</odoo>